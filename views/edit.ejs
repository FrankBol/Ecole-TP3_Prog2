<%- include("partials/navLogIn") -%>

<div class="w-75 m-auto">
    <p class="display-4">Modification des données des produits</p>
    <form action="/editPut/<%= product.id%>?_method=put " method="post">
        <input class="form-control" type="text" value="<%= product.code%>" name="code">
        <input class="form-control" type="text" value="<%= product.description%>" name="description">
        <input class="form-control" type="text" value="<%= product.price%>" name="price">
        <div class="text-center"><button class="btn bg-info w-100 text-white" type="submit">Mise à jour du Produit</button></div>
    </form>
</div>
